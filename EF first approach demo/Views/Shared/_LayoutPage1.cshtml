<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
            margin-top: 5px;
            list-style:none;
        }
        li 
        {
            list-style:none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <p class="navbar-brand text-bg-dark m-0 mx-2 p-2">Some Company</p>
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-black" href="/home/index">Home</a></li>
            <li class="nav-item"><a class="nav-link text-black" href="/brand/index">Brands</a></li>
            <li class="nav-item"><a class="nav-link text-black" href="/categories/index">Categories</a></li>
            <li class="nav-item"><a class="nav-link text-black" href="/product/index">Products</a></li>
        </ul>
        @RenderSection("searchFacility", required: false)
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
